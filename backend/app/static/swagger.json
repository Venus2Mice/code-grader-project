{
  "openapi": "3.0.0",
  "info": {
    "title": "Code Grader API",
    "description": "API for the Automated C++ Programming Grader",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api",
      "description": "API Server"
    }
  ],
  "tag": [
    {
      "name": "Authentication",
      "description": "User registration and login"
    },
    {
      "name": "Classes",
      "description": "Operations about classes and enrollment"
    },
    {
      "name": "Problems",
      "description": "Managing programming problems"
    },
    {
      "name": "Submissions",
      "description": "Submitting code and viewing results"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "full_name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john.doe@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  },
                  "role": {
                    "type": "string",
                    "example": "student"
                  }
                },
                "required": [
                  "full_name",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Missing required fields"
          },
          "409": {
            "description": "Email already registered"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Log in a user",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john.doe@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, returns access token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Bad email or password"
          }
        }
      }
    },
    "/auth/profile": {
      "get": {
        "summary": "Get user profile",
        "tags": [
          "Authentication"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User profile data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "full_name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (Missing or invalid token)"
          }
        }
      }
    },
    "/classes": {
      "post": {
        "summary": "Create a new class (Teacher only)",
        "tags": [
          "Classes"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Advanced C++"
                  },
                  "course_code": {
                    "type": "string",
                    "example": "CS404"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Class created successfully"
          },
          "400": {
            "description": "Missing class name"
          },
          "403": {
            "description": "Forbidden, teacher role required"
          }
        }
      },
      "get": {
        "summary": "Get classes the user is in",
        "tags": [
          "Classes"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of classes"
          }
        }
      }
    },
    "/classes/join": {
      "post": {
        "summary": "Join a class using an invite code (Student only)",
        "tags": [
          "Classes"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "invite_code": {
                    "type": "string",
                    "example": "a1b2c3d4-e5f6-..."
                  }
                },
                "required": [
                  "invite_code"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully joined class"
          },
          "404": {
            "description": "Invalid invite code"
          },
          "409": {
            "description": "Already in class"
          }
        }
      }
    },
    "/submissions": {
      "post": {
        "summary": "Submit a solution to a problem (Student only)",
        "tags": [
          "Submissions"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "problem_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "source_code": {
                    "type": "string",
                    "example": "#include <iostream>..."
                  },
                  "language": {
                    "type": "string",
                    "example": "cpp"
                  }
                },
                "required": [
                  "problem_id",
                  "source_code"
                ]
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Submission accepted for grading"
          },
          "400": {
            "description": "Missing required fields"
          },
          "403": {
            "description": "Forbidden, not enrolled in the class"
          }
        }
      }
    },
    "/submissions/{submission_id}": {
      "get": {
        "summary": "Get the result of a specific submission",
        "tags": [
          "Submissions"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "submission_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation, returns submission details"
          },
          "403": {
            "description": "Forbidden, you do not own this submission"
          },
          "404": {
            "description": "Submission not found"
          }
        }
      }
    },
    "/problems/{problem_id}": {
      "get": {
        "summary": "Get details of a specific problem",
        "tags": [
          "Problems"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "problem_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "404": {
            "description": "Problem not found"
          }
        }
      }
    },
    "/classes/{class_id}/problems": {
      "post": {
        "summary": "Create a new problem in a class (Teacher only)",
        "tags": [
          "Problems"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "class_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Bài 2: Chuỗi đối xứng"
                  },
                  "description": {
                    "type": "string",
                    "example": "Kiểm tra xem một chuỗi có phải là palindrome hay không."
                  },
                  "time_limit_ms": {
                    "type": "integer",
                    "example": 1000
                  },
                  "memory_limit_kb": {
                    "type": "integer",
                    "example": 256000
                  },
                  "test_cases": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "input": {
                          "type": "string"
                        },
                        "output": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "title",
                  "description"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Problem created successfully"
          },
          "403": {
            "description": "Forbidden, you are not the teacher of this class"
          }
        }
      },
      "get": {
        "summary": "Get all problems in a class",
        "tags": [
          "Problems"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "class_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    }
  }
}