# Worker Environment Variables Template
# Copy this file to .env and update with your values

# Database connection (use localhost when worker runs on host)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/code_grader

# RabbitMQ connection (use localhost when worker runs on host)
RABBITMQ_HOST=localhost

# Grader temporary directory (absolute path on host machine)
# Both should be the same when worker runs on host
GRADER_TEMP_DIR=/path/to/your/project/grader-temp
HOST_GRADER_TEMP_DIR=/path/to/your/project/grader-temp

# Backend API URL
BACKEND_API_URL=http://localhost:5000

# Python unbuffered output
PYTHONUNBUFFERED=1